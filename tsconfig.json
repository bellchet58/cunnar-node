{
  "compilerOptions": {
      "module": "CommonJS",
      "outDir": "./build",
      "allowJs": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "target": "es5",
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowUnreachableCode": true,
      "allowUnusedLabels": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "moduleResolution": "node"    
  },
  "include": [
      "./src/**/*",
      "./test/*"
  ],
  "exclude": ["node_modules", "build"]
}